class Solution {
    public int reverse(int x) {
        boolean neg = false;
        if(x < 0){
            neg = true;
            x *= -1;
        }
        long ans = 0;
        while(x > 0){
            ans = (ans * 10) + (x % 10);
            x /= 10;
        }
        if(ans > Integer.MAX_VALUE){
            return 0;
        }
        return neg ? (int)(-1 * ans) : (int)ans;
    }
}
